# ============================================
# 监控系统前端 Nginx 反向代理配置示例
# ============================================
# 
# 部署架构：
#   Nginx 作为反向代理服务器
#   - 静态文件服务：直接提供前端打包文件
#   - 反向代理：将 /api 请求转发到后端服务
#
# 使用方法：
# 1. 复制此文件到 /etc/nginx/sites-available/monitor-frontend
# 2. 修改配置中的域名、路径等信息
# 3. 创建软链接: sudo ln -s /etc/nginx/sites-available/monitor-frontend /etc/nginx/sites-enabled/
# 4. 测试配置: sudo nginx -t
# 5. 重新加载: sudo systemctl reload nginx
#
# ============================================

# HTTP 重定向到 HTTPS（如果使用 HTTPS）
server {
    listen 80;
    server_name your-domain.com;  # 修改为您的域名
    
    # 如果使用 HTTPS，取消下面的注释
    # return 301 https://$server_name$request_uri;
    
    # ============================================
    # 1. 静态文件服务（前端打包文件）
    # ============================================
    root /var/www/monitor-frontend/dist;  # 修改为实际部署路径
    index index.html;
    
    # 前端路由支持（Vue Router History 模式）
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # ============================================
    # 2. 反向代理（后端 API）
    # ============================================
    location /api {
        # 代理到后端服务
        proxy_pass http://localhost:8080;  # 修改为后端实际地址和端口
        
        # HTTP 版本
        proxy_http_version 1.1;
        
        # WebSocket 支持（如果需要）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;
        
        # 请求头设置
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # 缓冲设置
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
    
    # ============================================
    # 3. 静态资源缓存优化
    # ============================================
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # ============================================
    # 4. Gzip 压缩
    # ============================================
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types 
        text/plain 
        text/css 
        text/xml 
        text/javascript 
        application/javascript 
        application/xml+rss 
        application/json
        application/x-font-ttf
        application/vnd.ms-fontobject
        font/opentype
        image/svg+xml
        image/x-icon;
    
    # 禁止访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

